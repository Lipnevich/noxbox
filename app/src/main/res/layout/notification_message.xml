<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@drawable/notification_horizontal_gradient_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp">


        <TextView
            android:id="@+id/profession"
            style="@style/TextAppearance.Compat.Notification.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="4dp"
            android:layout_toStartOf="@+id/photo"
            android:gravity="start"
            android:lines="1"
            android:text="Superman"
            android:textColor="@color/secondary"
            android:textSize="@dimen/text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/message"
            style="@style/TextAppearance.Compat.Notification.Info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profession"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:layout_toStartOf="@+id/photo"
            android:lines="1"
            android:text="New message hellohellohellohelloh"
            android:textColor="@color/secondary"
            android:textSize="@dimen/text_size" />


        <ImageView
            android:id="@+id/photo"
            android:layout_width="84dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-46dp"
            android:layout_marginBottom="-34dp"
            android:src="@drawable/human" />
    </RelativeLayout>
</RelativeLayout>