<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/messageContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">


        <ImageView
            android:layout_width="192dp"
            android:layout_height="192dp"
            android:layout_gravity="center"
            android:src="@drawable/noxbox" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="12dp"
            android:text="@string/noxbox"
            android:textColor="@color/secondary"
            android:textSize="36sp" />

        <Button
            android:id="@+id/googleAuth"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_margin="12dp"
            android:background="@drawable/auth_button_corners"
            android:drawableStart="@drawable/ic_google"
            android:enabled="false"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:text="@string/googleAuth"
            android:textAllCaps="false"
            android:textColor="@color/google_text"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <Button
            android:id="@+id/phoneAuth"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_margin="12dp"
            android:background="@drawable/auth_button_corners"
            android:drawableStart="@drawable/phone"
            android:enabled="false"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:text="@string/phoneAuth"
            android:textAllCaps="false"
            android:textColor="@color/google_text"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/primary"
                android:gravity="top" />

            <TextView
                android:id="@+id/agreementView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:autoLink="web"
                android:textColorLink="@color/primary"
                android:textColor="@color/secondary"
                android:textSize="16sp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>