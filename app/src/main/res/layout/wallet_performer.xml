<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:fillViewport="true"
    android:layout_alignParentStart="true">

<RelativeLayout android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:padding="15dp"
              android:orientation="vertical" >

    <TextView
        android:id="@+id/balance_label_id"
        android:textSize="24sp"
        android:text="@string/your_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/balance_id"
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/primary"
        android:textSize="84sp"
        android:layout_below="@id/balance_label_id"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:text="@string/frozen_money"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/frozen_money_label_id"
        android:layout_below="@+id/balance_id"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:text="0"
        android:textSize="48sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/frozen_money_id"
        android:layout_below="@+id/frozen_money_label_id"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:text="@string/current_reward"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/current_reward_label_id"
        android:layout_below="@+id/frozen_money_id"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:text="0.00111"
        android:textSize="48sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/current_reward_id"
        android:layout_below="@+id/current_reward_label_id"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/current_reward_id"
                    android:layout_alignParentBottom="true">
        <Button
            android:text="@string/send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/send_button_id"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"/>

        <EditText
            android:id="@+id/address_to_send_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="@string/addressToRefund"
            android:textSize="16sp"
            android:layout_alignTop="@+id/send_button_id"
            android:layout_toStartOf="@+id/send_button_id"/>
    </RelativeLayout>


</RelativeLayout>
</ScrollView>