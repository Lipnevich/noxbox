<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/mapId"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/pointerImage"
            style="@style/IconButtonStyle"
            android:layout_gravity="center"
            android:layout_marginBottom="28dp"
            android:src="@drawable/pointer" />

        <ImageButton
            android:id="@+id/menu"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="start|top"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/circular_button"
            android:clickable="true"
            android:elevation="8dp"
            android:focusable="true"
            android:scaleType="center"
            android:src="@drawable/menu"
            android:visibility="gone" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|top"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:scaleType="center"
            android:src="@drawable/ic_filter"
            android:tint="@color/secondary"
            android:visibility="gone"
            app:fabSize="auto"
            app:maxImageSize="48dp" />

        <FrameLayout
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:layout_gravity="end|top">

            <ImageButton
                android:id="@+id/chat"
                style="@style/IconButtonStyle"
                android:layout_marginStart="10dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="12dp"
                android:background="@color/fui_transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/chat" />

            <TextView
                android:id="@+id/totalUnread"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="56dp"
                android:background="@drawable/chat_badge_background"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="@color/secondary"
                android:textSize="@dimen/text_size_secondary"
                android:visibility="gone" />

        </FrameLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/navigation"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone"
            app:cardBackgroundColor="@color/primary"
            app:cardCornerRadius="28dp"
            app:cardElevation="8dp">

            <ImageButton
                android:id="@+id/navigationImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:background="@color/fui_transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/navigation"
                android:tint="@color/secondary"
                android:visibility="visible" />
        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:id="@+id/switcherLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <live.noxbox.ui.RoleSwitcherLayout
                android:id="@+id/roleSwitcherLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp" />
        </RelativeLayout>


        <android.support.design.widget.CoordinatorLayout
            android:id="@+id/coordinatorLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/locationButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|bottom"
                android:layout_marginStart="12dp"
                android:layout_marginBottom="32dp"
                android:src="@drawable/my_location"
                android:tint="@color/secondary"
                android:visibility="gone"
                app:fabSize="auto"
                app:maxImageSize="48dp" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/customFloatingView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="32dp"
                android:scaleType="center"
                android:src="@drawable/add"
                android:tint="@color/secondary"
                android:visibility="gone"
                app:fabSize="auto"
                app:maxImageSize="48dp" />

        </android.support.design.widget.CoordinatorLayout>

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:layout_marginStart="12dp"
            android:layout_marginTop="58dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/debugNotify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/generatePush"
                android:textColor="@color/debug"
                android:textSize="@dimen/text_title"
                android:visibility="gone" />

            <TextView
                android:id="@+id/debugGenerateNoxboxes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/generateNoxboxes"
                android:textColor="@color/debug"
                android:textSize="@dimen/text_title"
                android:visibility="gone" />

            <TextView
                android:id="@+id/debugRequest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/request"
                android:textColor="@color/debug"
                android:textSize="@dimen/text_title"
                android:visibility="gone" />

            <TextView
                android:id="@+id/debugAccept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/accept"
                android:textColor="@color/debug"
                android:textSize="@dimen/text_title"
                android:visibility="gone" />

            <TextView
                android:id="@+id/debugPhotoVerify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|top"
                android:layout_marginTop="32dp"
                android:text="@string/verifyPhoto"
                android:textColor="@color/debug"
                android:textSize="@dimen/text_title"
                android:visibility="gone" />

            <TextView
                android:id="@+id/debugPhotoReject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|top"
                android:layout_marginTop="32dp"
                android:text="@string/rejectPhoto"
                android:textColor="@color/debug"
                android:textSize="@dimen/text_title"
                android:visibility="gone" />

            <TextView
                android:id="@+id/debugComplete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|top"
                android:layout_marginTop="32dp"
                android:text="@string/complete"
                android:textColor="@color/debug"
                android:textSize="@dimen/text_title"
                android:visibility="gone" />
        </LinearLayout>


    </fragment>

    <RelativeLayout
        android:id="@+id/demonstration"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#83000000"
        android:visibility="gone">


        <ImageView
            android:id="@+id/menuDemonstration"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/circular_button"
            android:clickable="true"
            android:elevation="8dp"
            android:focusable="true"
            android:scaleType="center"
            android:src="@drawable/menu"
            android:visibility="visible" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/locationDemonstration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="32dp"
            android:src="@drawable/my_location"
            android:tint="@color/secondary"
            android:visibility="visible"
            app:fabSize="auto"
            app:maxImageSize="48dp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/contractDemonstration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="32dp"
            android:scaleType="center"
            android:src="@drawable/add"
            android:tint="@color/secondary"
            android:visibility="visible"
            app:fabSize="auto"
            app:maxImageSize="48dp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/filtersDemonstration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:scaleType="center"
            android:src="@drawable/ic_filter"
            android:tint="@color/secondary"
            android:visibility="visible"
            app:fabSize="auto"
            app:maxImageSize="48dp" />

        <live.noxbox.ui.RoleSwitcherLayout
            android:id="@+id/roleSwitcherDemonstration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/textMenuDemonstration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="124dp"
            android:text="@string/menu"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textMenuDemonstrationProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textMenuDemonstration"
            android:layout_alignParentStart="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:text="@string/yourProfile"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textMenuDemonstrationWallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textMenuDemonstrationProfile"
            android:layout_alignParentStart="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:text="@string/yourWallet"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textMenuDemonstrationSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textMenuDemonstrationWallet"
            android:layout_alignParentStart="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:text="@string/yourHistory"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textFiltersDemonstration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textMenuDemonstrationSettings"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="80dp"
            android:text="@string/filters"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textFiltersDemonstrationDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textFiltersDemonstration"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="80dp"
            android:text="@string/filterDescription"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textLocationDemonstration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="56dp"
            android:layout_marginBottom="146dp"
            android:text="@string/location"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textContractDemonstration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="56dp"
            android:layout_marginBottom="186dp"
            android:text="@string/contract"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <live.noxbox.ui.ArrowView
            android:id="@+id/arrowMenuDemonstration"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <live.noxbox.ui.ArrowView
            android:id="@+id/arrowFiltersDemonstration"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <live.noxbox.ui.ArrowView
            android:id="@+id/arrowLocationDemonstration"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <live.noxbox.ui.ArrowView
            android:id="@+id/arrowContractDemonstration"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <live.noxbox.ui.ArrowView
            android:id="@+id/arrowRoleSwitcherDemonstration"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:clickable="true"
        android:fitsSystemWindows="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:theme="@style/NavigationViewStyle"
        app:headerLayout="@layout/navigation_header"
        app:itemIconTint="@color/primary"
        app:itemTextColor="@color/primary"
        app:menu="@menu/navigation_body" />


</android.support.v4.widget.DrawerLayout>
