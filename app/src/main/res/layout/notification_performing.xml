<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@drawable/notification_horizontal_gradient_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_centerVertical="true"
            android:text="@string/serviceIsPerforming"
            android:textColor="@color/secondary"
            android:textSize="@dimen/text_size"
            />
        <ViewFlipper
            android:id="@+id/origami"
            android:layout_width="80dp"
            android:layout_height="64dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:autoStart="true"
            android:flipInterval="1000"
            android:measureAllChildren="true">

            <ImageView
                android:layout_width="92dp"
                android:layout_height="92dp"
                android:layout_marginStart="-10dp"
                android:layout_marginTop="-30dp"
                android:src="@drawable/ic_notification_performing_origami_first" />

            <ImageView
                android:layout_width="92dp"
                android:layout_height="92dp"
                android:layout_marginStart="-10dp"
                android:layout_marginTop="-30dp"
                android:src="@drawable/ic_notification_performing_origami_second" />

            <ImageView
                android:layout_width="92dp"
                android:layout_height="92dp"
                android:layout_marginStart="-11dp"
                android:layout_marginTop="-30dp"
                android:src="@drawable/ic_notification_performing_origami_third" />

        </ViewFlipper>
    </RelativeLayout>
</RelativeLayout>