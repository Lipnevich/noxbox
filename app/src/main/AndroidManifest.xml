<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="by.nicolay.lipnevich.noxbox">

    <application
        android:name="App"
        android:label="@string/noxbox"
        android:icon="@mipmap/ic_launcher"
        android:supportsRtl="false"
        android:theme="@style/AppTheme">

        <activity
            android:name=".pages.AuthPage"
            android:theme="@style/NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="by.nicolay.lipnevich.noxbox.MapActivity"
                  android:theme="@style/NoActionBar"/>
        <activity android:name=".constructor.ConstructorNoxboxPage"
            android:parentActivityName=".MapActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity
            android:name=".constructor.NoxboxTypeListPage"
            android:theme="@android:style/Theme.Holo.Light.Dialog"
            android:noHistory="true"
            android:label="@string/selectService">
        </activity>
        <activity android:name="by.nicolay.lipnevich.noxbox.pages.HistoryPage"/>
        <activity android:name="by.nicolay.lipnevich.noxbox.pages.ChatPage"
                  android:theme="@style/NoActionBar"
                  android:windowSoftInputMode="adjustResize|stateHidden"/>
        <activity android:name="by.nicolay.lipnevich.noxbox.pages.WalletPage"
                  android:windowSoftInputMode="adjustResize|stateHidden"/>
        <activity android:name="by.nicolay.lipnevich.noxbox.pages.QRCapturePage"
            android:screenOrientation="portrait">
        </activity>

        <meta-data android:name="io.fabric.ApiKey" android:value="4280356528ee3adc2317d482e6f6864f345f98d9" />
        <meta-data android:name="com.google.android.geo.API_KEY" android:value="@string/google_maps_key"/>

        <service android:name="by.nicolay.lipnevich.noxbox.tools.MessagingService">
            <intent-filter><action android:name="com.google.firebase.MESSAGING_EVENT"/></intent-filter>
        </service>

        <service android:name="by.nicolay.lipnevich.noxbox.tools.RefreshNotificationTokenService">
            <intent-filter><action android:name="com.google.Firebase.INSTANCE_ID_EVENT"/></intent-filter>
        </service>
    </application>

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.CAMERA"/>

</manifest>